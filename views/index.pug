extends layout

block content
  h1= title
  p
    a.button(href="/books/new") Create New Book
  br
  form(action="/books/search", method="POST")
    label(for="search") Search for:
    input(type="text", id="search" name="query")
    input(type="submit", value="Search")
  br
  br
  table
    thead 
      tr
        th Title 
        th Author 
        th Genre 
        th Year 
    tbody 
      each book in books 
        tr 
          td 
            a(href=`/books/${book.id}`)= book.title
          td= book.author
          td= book.genre
          td= book.year