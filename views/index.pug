extends layout

block content
  h1= title
  p
    a.button(href="/books/new") Create New Book

  br
  br

  form(action="/books/search", method="POST")
    input(type="text", id="search", name="query", placeholder="Type a title, author, genre or year")
    input#search-submit(type="submit", value="Search")
  br
  br

  if books.length === 0
    p Sorry, but there are no results for this search query in the library.
  else 
    table
      thead 
        tr
          th Title 
          th Author 
          th Genre 
          th Year 
      tbody 
        //- Display the books for the current page
        each book in books 
          tr 
            td 
              a(href=`/books/${book.id}`)= book.title
            td= book.author
            td= book.genre
            td= book.year

    //- Pagination buttons
    if totalPages > 1
      ul.pagination
        li.page-item(class=(currentPage === 1) ? 'disabled' : '')
          a(href=`${urlVariable}?page=${currentPage - 1}`) Previous
        - for (var i = 1; i <= totalPages; i++)
          li.page-item(class=(i === currentPage) ? 'active' : '')
            a(href=`${urlVariable}?page=${i}`) #{i}
        li.page-item(class=(currentPage === totalPages) ? 'disabled' : '')
          a(href=`${urlVariable}?page=${currentPage + 1}`) Next
